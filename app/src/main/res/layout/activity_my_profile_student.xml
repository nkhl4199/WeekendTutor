<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/book"

    android:fillViewport="true"

    tools:context=".MyProfileStudent">



    <RelativeLayout

        android:id="@+id/layout1"

        android:layout_width="match_parent"

        android:layout_height="match_parent">



        <LinearLayout

            android:id="@+id/layout2"

            android:layout_width="match_parent"

            android:layout_height="182dp"

            android:background="@color/startblue1"

            android:orientation="horizontal"></LinearLayout>



        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

            android:id="@+id/profilephoto"

            android:layout_width="150dp"

            android:layout_height="150dp"

            android:layout_below="@+id/layout2"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="-80dp"

            android:clickable="true"

            android:elevation="5dp"

            android:padding="20dp"

            android:scaleType="centerCrop"

            android:src="@drawable/user_pro"

            app:civ_border_color="#FFFFFFFF"

            app:civ_border_width="3dp" />



        <TextView

            android:id="@+id/editSname"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/profilephoto"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"

            android:gravity="center"

            android:textColor="@color/common_google_signin_btn_text_dark_default"

            android:textSize="25sp"

            android:textStyle="bold" />



        <ImageView

            android:id="@+id/emailicon"

            android:layout_width="30dp"

            android:layout_height="30dp"

            android:layout_below="@id/editSname"

            android:layout_marginTop="25dp"

            android:layout_toLeftOf="@id/email"

            android:scaleType="centerCrop"

            android:src="@drawable/email"



            />



        <TextView

            android:id="@+id/email"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/editSname"

            android:layout_centerHorizontal="true"

            android:layout_marginLeft="10dp"

            android:layout_marginTop="22dp"

            android:textColor="@color/common_google_signin_btn_text_dark_default"

            android:textSize="20sp" />



        <ImageView

            android:id="@+id/graduationicon"

            android:layout_width="30dp"

            android:layout_height="30dp"

            android:layout_below="@id/emailicon"

            android:layout_marginTop="25dp"

            android:layout_toLeftOf="@id/email"

            android:background="@drawable/course1"

            android:scaleType="centerCrop" />



        <TextView

            android:id="@+id/qualification"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/emailicon"

            android:layout_centerHorizontal="true"

            android:layout_marginLeft="5dp"

            android:layout_marginTop="20dp"

            android:textColor="@color/common_google_signin_btn_text_dark_default"

            android:textSize="20sp" />



        <ImageView

            android:id="@+id/locationicon"

            android:layout_width="30dp"

            android:layout_height="30dp"

            android:layout_below="@id/graduationicon"

            android:layout_marginTop="20dp"

            android:layout_marginBottom="80dp"

            android:layout_toLeftOf="@id/email"

            android:background="@drawable/location1"

            android:scaleType="centerCrop" />



        <TextView

            android:id="@+id/location"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/graduationicon"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="20dp"

            android:layout_marginBottom="80dp"

            android:layout_marginLeft="10dp"

            android:textSize="20sp" />



        <LinearLayout

            android:id="@+id/loc"

            android:layout_width="match_parent"

            android:layout_height="70dp"

            android:layout_below="@+id/location"

            android:layout_alignParentBottom="true"

            android:weightSum="2">



            <Button

                android:id="@+id/edit"

                android:layout_width="0dp"

                android:layout_height="50dp"

                android:layout_margin="10dp"

                android:layout_weight="1"

                android:background="@drawable/custom1"

                android:text="Edit Profile"

                android:textColor="@color/common_google_signin_btn_text_dark_default" />



            <Button

                android:id="@+id/changeAuth"

                android:layout_width="0dp"

                android:layout_height="50dp"

                android:layout_margin="10dp"

                android:layout_weight="1"

                android:background="@drawable/custom1"

                android:text="Login Info"

                android:textColor="@color/common_google_signin_btn_text_dark_default" />

        </LinearLayout>

    </RelativeLayout>





</ScrollView>