<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfile"
    android:background="@drawable/book"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textColor="#ffff"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=""
            android:layout_below="@id/nameview"
            android:textColor="#ffff"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/emailview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="#ffff"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:hint=""
            android:layout_below="@id/emailview"
            android:textColor="#ffff"/>
        <!--TextView
            android:id="@+id/passview"
            android:layout_below="@id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Password"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@id/passview"
            android:hint=""/>
        <TextView
            android:id="@+id/cpassview"
            android:layout_below="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Confirm Password"/>
        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@id/cpassview"
            android:hint=""/-->
        <ImageButton
            android:id="@+id/dp"
            android:layout_marginRight="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/addprofilepic"
            android:layout_alignRight="@id/name"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/qfview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Qualification"
            android:textColor="#ffff"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName"
            android:hint=""
            android:layout_below="@id/qfview"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/cityview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qualification"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="City (where you are available as a tutor)"
            android:textColor="#ffff"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/city"
            android:layout_below="@id/cityview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName"
            android:hint=""
            android:textColor="#ffff"/>

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/custom1"
            android:text="Save Changes"
            android:textColor="#ffff" />
        <!--Button
            android:id="@+id/backbut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/save"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorAccent"
            android:text="Back" /-->
        <!--ImageView
            android:id="@+id/quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/quote"
            android:layout_below="@id/registerbutton"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerCrop"/-->

    </RelativeLayout>
</ScrollView>